@model EditUserViewModel

@{
    ViewBag.Title = "Edycja pracownika";
}

<h1>Edytuj pracownika</h1>

<form method="post" class="mt-3" asp-action="EditUser">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    @*<div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label">ID:</label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>*@
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Adres e-mail:</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">Imię:</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SecondName" class="col-sm-2 col-form-label">Drugie imię:</label>
        <div class="col-sm-10">
            <input asp-for="SecondName" class="form-control">
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">Nazwisko:</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Pesel" class="col-sm-2 col-form-label">PESEL:</label>
        <div class="col-sm-10">
            <input asp-for="Pesel" class="form-control">
            <span asp-validation-for="Pesel" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BDate" class="col-sm-2 col-form-label">Data urodzenia:</label>
        <div class="col-sm-10">
            <input type="date" asp-format="{0:yyyy-MM-dd}" asp-for="BDate" class="form-control">
            <span asp-validation-for="BDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Numer telefonu:</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IdCardNumber" class="col-sm-2 col-form-label">Numer karty ID:</label>
        <div class="col-sm-10">
            <input asp-for="IdCardNumber" class="form-control">
            <span asp-validation-for="IdCardNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IdJob" class="col-sm-2 col-form-label">Stanowisko:</label>
        <div class="col-sm-10">
            <select asp-for="IdJob" class="form-control" asp-items="ViewBag.IdJob"></select>
            <span asp-validation-for="IdJob" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IdManager" class="col-sm-2 col-form-label">Przełożony:</label>
        <div class="col-sm-10">
            <select asp-for="IdManager" class="form-control" asp-items="ViewBag.IdManager"><option> </option></select>
            <span asp-validation-for="IdManager" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Zapisz</button> |
            <a asp-action="ListUsers">Powrót do listy</a>
        </div>
    </div>

</form>

<div class="card">
    <div class="card-header">
        <h3>Role użytkownika:</h3>
    </div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Roles)
            {
                <h5 class="card-title">@role</h5>
            }
        }
        else
        {
            <h5 class="card-title">Brak przypisanych ról</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="Administration" asp-action="ListRoles" style="width:auto" class="btn btn-primary">
            Zarządzaj rolami
        </a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}