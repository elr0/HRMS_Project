@model IEnumerable<Employee>

@{
    ViewBag.Title = "Lista pracowników";
}

<h1>Lista pracowników</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account"
       class="btn btn-primary mb-3" style="width:auto">
        Dodaj nowego pracownika
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.FirstName @user.LastName</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" 
                   class="btn btn-primary">Edytuj</a>
                <a href="#" class="btn btn-danger">Usuń</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Brak pracowników.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Użyj poniższego przycisku w celu dodania nowego pracownika
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Dodaj
            </a>
        </div>
    </div>
}