@model HRMS_Project.Models.AvailableAbsence

@{
    ViewData["Title"] = "Dodaj nowy urlop";
}

<h1>Dodawanie nowego urlopu</h1>


<hr />

<form asp-action="CreateAvailableAbsence" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="IdEmployee" class="col-sm-2 col-form-label">Pracownik:</label>
        <div class="col-sm-10">
            <select asp-for="IdEmployee" class="form-control" asp-items="ViewBag.IdEmployee"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IdAbsenceType" class="col-sm-2 col-form-label">Rodzaj urlopu:</label>
        <div class="col-sm-10">
            <select asp-for="IdAbsenceType" class="form-control" asp-items="ViewBag.IdAbsenceType"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AvailableDays" class="col-sm-2 col-form-label">Dostępne dni:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="AvailableDays" class="form-control">
            <span asp-validation-for="AvailableDays" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UsedAbsence" class="col-sm-2 col-form-label">Wykorzystane dni dni:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="UsedAbsence" class="form-control">
            <span asp-validation-for="UsedAbsence" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" /> |
        <a asp-action="ListAvailableAbsence">Powrót do listy</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
