@model EditAvailableAbsenceViewModel
@inject UserManager<Employee> UserManager

@{
    ViewData["Title"] = "Edytuj urlop";
}

<h1>Edytuj urlop</h1>
<hr />

<form asp-action="EditAvailableAbsence" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="AvailableAbsence.IdEmployee" class="col-sm-2 col-form-label">Pracownik:</label>
        <div class="col-sm-10">
            <input asp-for="AvailableAbsence.IdEmployee" class="form-control" disabled="disabled" value="@Model.AvailableAbsence.IdEmployee">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AvailableAbsence.IdAbsenceType" class="col-sm-2 col-form-label">Rodzaj urlopu:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="AvailableAbsence.IdAbsenceType" class="form-control" disabled="disabled" value="@Model.AvailableAbsence.IdAbsenceType">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AvailableAbsence.AvailableDays" class="col-sm-2 col-form-label">Dostępne dni:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="AvailableAbsence.AvailableDays" class="form-control">
            <span asp-validation-for="AvailableAbsence.AvailableDays" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AvailableAbsence.UsedAbsence" class="col-sm-2 col-form-label">Dostępne dni:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="AvailableAbsence.UsedAbsence" class="form-control">
            <span asp-validation-for="AvailableAbsence.UsedAbsence" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Zapisz" class="btn btn-primary" /> | <a asp-action="ListAvailableAbsence">Powrót do listy</a>
    </div>
</form>
